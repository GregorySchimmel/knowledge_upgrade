//
// Simple while loop to iterate over a statement of x number of times.
//
var i = 0;
// The value of 'i' will always hold a value of 5 because of the increcement and iteration of the while loop value of 5. While loops always need a curly bracket to ensure the loop is held until needed.
while (i < 5) {
  console.info(i);
  i++;
}
console.info('done i=' + i);

