//Using typeof is a great way to understand what type the value. EX: Lets say you have a stored variable and are unsure of the variables type.

const myArray = ['string', 'number', 'boolean', 'undefined', 'null', 'object', 'function'];

for (const value of myArray) {
  console.log("The typeof operator in JavaScript returns the type of a value. The possible types are: " + value);
}
